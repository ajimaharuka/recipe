@import 'nib'
@font-face
	font-family: 'fontello'
	src url('../font/fontello.eot?80205240')
	src url('../font/fontello.eot?80205240#iefix') format('embedded-opentype'),
		url('../font/fontello.woff?80205240') format('woff'),
		url('../font/fontello.ttf?80205240') format('truetype'),
		url('../font/fontello.svg?80205240#fontello') format('svg')
	font-weight normal
	font-style normal
i:before,
#entry.list .list_item:after
	font-family "fontello"
	font-style normal
	font-weight normal
	speak none
	vertical-align top
	display inline-block
	text-decoration inherit
	width 1em
	margin-right .2em
	text-align center
	font-variant normal
	text-transform none
	line-height 1em
	font-size 3rem

body
	background url("../img/bg_pink.png")
	position relative
	h2
	p
	li
		color rgb(87,75,0)

#wrapper
	position relative

#maincontainer
	max-width 1240px
	margin 0 auto
	padding 15px 10px
	#maincontent
		position relative
		z-index 10
		background url("../img/bg_dot.png")
		width 100%
		box-shadow 0 0 12px rgba(0,0,0, .3)
		border 1px solid rgba(0,0,0,.1)
		border-top 1px solid rgba(255,255,255,.8)
		border-bottom 1px solid rgba(0,0,0,.15)
		border-radius 6px
		.recipeNum
			display none
			top 0
			left 0
			margin-top -5px
			margin-left -5px
			background url("../img/count.png")
			width 142px
			height 142px
			position absolute
			div
				display block
				font-size 16px
				color #fff
				text-shadow  1px 1px 1px rgba(0,0,0,.7)
				font-weight bold
				text-align right
				position absolute
				top 35px
				transform rotate(-45deg)
				span
					font-size 20px
		.page
			position relative
			margin 10px auto
			height 100%

#header
	background #EC5176
	border-bottom 1px solid rgba(146, 8, 58, .3)
	.control
		text-align right
		line-height 30px
		height 30px
		max-width 1240px
		margin 0 auto
		.button
			display inline-block
			cursor pointer
			color #fff
			padding 0 10px
			border-right solid 1px rgba(146, 8, 58, .5)
			&:first-child
				border-left solid 1px rgba(146, 8, 58, .5)
			span
				font-size 1.3rem
				font-weight bold
			&:hover
				color #fff
				background-color rgba(146, 8, 58, .3)
			&.active
				color #fff
				background-color rgba(146, 8, 58, .8)
			&#category
				margin-right 4px
			&#toGrid
				border-top-right-radius 0
				border-bottom-right-radius 0
			&#toList
				border-top-left-radius 0
				border-bottom-left-radius 0
			&#toGrid i:before
				content '\e800'
			&#toList i:before
				content '\e801'
			i:before
				line-height 28px
				font-size 1.6rem
				color #fff
			&:hover i:before
			&.active i:before
				color #fff

#title
	width 100%
	top 0
	left 0
	text-align center
	padding-top 20px
	z-index 2000
	margin 30px auto 
	img
		height 160px

#entry
	display none
	margin 10px 30px
	background-color rgba(231, 222, 222, .7)
	box-shadow 0px -1px 8px rgba(0,0,0,.1) inset
	border 1px solid rgba(0,0,0,.1)
	border-top 1px solid rgba(255,255,255,.8)
	border-bottom 1px solid rgba(0,0,0,.15)
	position relative
	z-index 10
	&.grid
		padding 6px
		overflow hidden
		clear both
		.list_item
			float left
			width 20%
			padding-top 20%
			box-sizing border-box
			background-color #fff
			border solid 1px rgba(0, 0, 0, .1)
			box-shadow 0 0 1px rgba(0, 0, 0, .1)
			opacity 1
			position relative
			.dish
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				display block
				.img_wrapper
					&:after
						width 94%
						height 94%
						margin-top 3%
						margin-left 3%
						position absolute
						display block
						content ''
						color #fff
						padding-top 70%
						box-sizing border-box
						top 0
						left 0
						transition opacity .3s linear
						opacity 0
						background rgba(0,0,0,.5) url("../img/loading.png") 50% 100% no-repeat
						background-size cover
					&:hover:after
						opacity 1
					img
					.loading
						width 94%
						height 94%
						margin-top -47.5%
						margin-left -47%
						position absolute
						top 50%
						left 50%
						transition opacity 150
					.loading
						opacity 1
						background rgba(231,222,222,1) url("../img/loading.png") 50% 0 no-repeat
						background-size cover
				.titles
				.meta
					display none
	&.list
		padding 6px
		.list_item
			width 100%
			box-sizing border-box
			background-color #fff
			border solid 1px rgba(0, 0, 0, .1)
			box-shadow 0 0 1px rgba(0, 0, 0, .1)
			overflow hidden
			position relative
			&:after
				display block
				content '\e807'
				width 100%
				position absolute
				top 50%
				left 0
				font-size 3rem
				text-align right
				margin-left -15px
				margin-top -1.5rem
				color rgba(218, 205, 205, .7)
			&:hover:after
			&.active:after
				color #c5aaa1
			.dish
				display -webkit-box
				text-align left
				.img_wrapper
				.titles
				.meta
					display block
				.img_wrapper
					width 104px
					height 104px
					margin .6%
					margin-right 10px
					img
						width 100%
						height 100%
				.titles
					vertical-align middle
					min-width 120px
					height 100%
					-webkit-box-flex 1
					margin-right 40px
					margin-left 3px
					h2
						padding-top 8px
						font-size 1.8rem
						overflow hidden
						text-overflow ellipsis
						white-space nowrap
					.description
						font-size 1.4rem
						margin 0
						padding 0
				.meta
					vertical-align middle
					width 450px
					border-left 1px dashed #DACAC5
					padding-top 8px
					padding-left 10px
					.category
					.ingradient
					.time
						margin 10px 0
						display block
						height 14px
						line-height 14px
						li
						p
							display inline-block
							margin-right 8px
							font-size 1.2rem
					.category span:before
						content '種類'
						background-color #C79268
						color #fff
						padding 2px 3px 1px
						border-radius 2px
						font-size .8rem
						margin-right 5px
					.ingradient span:before
						color #fff
						content '材料'
						background-color #87B960
						padding 2px 3px 1px
						border-radius 2px
						font-size .8rem
						margin-right 5px
					.time i:before 
						color #C9BB69
						content '\e805'
						margin-top 2px
						margin-right 5px
						font-size 1.4rem

#copyright
	text-align center
	padding 0 0 80px
	small
		font-family 'Lato'
		font-weight 300
		font-size .8rem
		color rgba(156, 134, 134, .7)

@media screen and (max-width: 1260px)
	.maincontainer
	#header .control
		margin 0 10px

@media screen and (max-width: 840px)
	#entry
		margin 10px
	#entry.list .list_item .dish .meta
		display none
	#entry.list .list_item .dish .img_wrapper
		margin 1%

@media screen and (max-width: 600px)
	#entry.list .list_item .dish .img_wrapper
		margin 1.4%
	#entry.grid .list_item
		width 50%
		padding-top 50%
